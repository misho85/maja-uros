{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": ["react-hooks", "graphql"],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["~src", "./src"],
          ["~config", "./config"],
          ["~data", "./data"]
        ],
        "extensions": [".js", ".jsx", ".json"]
      }
    }
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/prop-types": [0]
  }
}
